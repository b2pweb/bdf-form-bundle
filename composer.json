{
  "name": "b2pweb/bdf-form-bundle",
  "description": "Bundle for BDF Form",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Vincent Quatrevieux"
    }
  ],
  "autoload": {
    "psr-4": { "Bdf\\Form\\Bundle\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },
  "minimum-stability": "dev",
  "require": {
    "php": "~7.2 | ~8.0",
    "b2pweb/bdf-form": "~1.0",
    "symfony/config": "~5.0|~6.0",
    "symfony/dependency-injection": "~5.0|~6.0",
    "symfony/framework-bundle": "~5.0|~6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0|~8.0|~9.0",
    "symfony/phpunit-bridge": "~5.0|~6.0",
    "symfony/yaml": "~5.0|~6.0",
    "symfony/security-csrf": "~5.0|~6.0",
    "friendsofphp/php-cs-fixer": "~3.0"
  },
  "suggest": {
    "b2pweb/bdf-form-attribute": "To use PHP 8 attributes syntax for forms"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.1.x-dev"
    }
  },
  "scripts": {
    "tests": "phpunit",
    "php-cs-fixer": "php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --diff --allow-risky=yes --ansi --dry-run"
  }
}
